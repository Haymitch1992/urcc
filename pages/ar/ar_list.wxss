/* pages/ar/ar_list.wxss */

.type-title{
  background: #e6eaed;
  padding: 10rpx 20rpx 10rpx 70rpx;
  position: relative;
  vertical-align: top;
  line-height: 60rpx;
  height: 60rpx;
  font-size: 28rpx;
  color: #666;
}

.fire-icon{
  width: 32rpx;
  display: inline-block;
  height: 32rpx;
  position: absolute;
  top: 18rpx;
  left: 28rpx;
}

.ar-text{
  width: 104rpx;
  height:52rpx;
  display: inline-block;
  z-index: 1;
  position: absolute;
  top: 146rpx;
  left: 100rpx;
}
.banner{
  position: relative;
  height: 380rpx;
  padding-top: 140rpx;
  box-sizing: border-box;
}

.banner text{
  color: #fff;
  text-align: center;
  width: 100%;
  font-size: 28rpx;
  position: relative;
  display: block;
  z-index: 1;
}
.banner .banner-title{
  font-size: 40rpx;
  text-align: left;
  padding-left: 220rpx;
}
.banner .banner-label{
  text-align: left;
  padding-left: 100rpx;
  padding-top: 20rpx;
  font-size: 30rpx;
}

.bg-container{
  width: 100%;
  height: 380rpx;
  position: absolute;
  top: 0px;
  left: 0;
}
.scene-container{
  display: flex;
  margin-top: 20rpx;
}
.scene-item{
  flex: 1;
  border: 1rpx solid #ddd;
  text-align: center;
  margin: 10rpx 20rpx;
  line-height: 120rpx;
  box-shadow: 0px 0px 10px rgba(0,0,0,.2);
  border-radius: 12rpx;
  text-align: left;
  padding-left: 30rpx;
}
.scene-item text{
  display: inline-block;
}
.scene-item .scene-icon{
  width: 68rpx;
  height: 68rpx;
  margin-right: 30rpx;
  display: inline-block;
  vertical-align: middle;
}