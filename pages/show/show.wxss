/* pages/show/show.wxss */

.page {
    background-color: #F5F5F5;
    padding-bottom: 20rpx;
}

.backdrop {
    width: 100%;
    background-color: rgb(255, 255, 255);
    text-align: center;
    padding-bottom: 10rpx;
}

.title {
    font-size: 34rpx;
    font-weight: 1000;
    line-height: 68rpx;
    color: #000;
}

.chuck{
    background-color: #fffdfd;
    margin: 35rpx;
    border-radius: 10rpx;
    padding: 20rpx;
    box-shadow: 0px 0px 10px rgba(0,0,0,.1);
}

.chuck image{
    width: 100%;
    height: 300rpx;
    border-radius: 10rpx;
    margin: 10rpx 0 0;
}

.chuck text{
    font-size: 30rpx;
    color: #666;
}